{% extends 'base.html.twig' %}

{% block title %}Emprunt{% endblock %}

{% block body %}
    <h1>Emprunt</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emprunt.id }}</td>
            </tr>
            <tr>
                <th>Pseudo abonné</th>
                <td><a href="{{ path('app_admin_abonne_show', {id: emprunt.abonne.id}) }}">{{ emprunt.abonne.pseudo }}</a></td>
            </tr>
            <tr>
                <th>Livre emprunté</th>
                <td><a href="{{ path('app_admin_livre_show', {id: emprunt.livre.id}) }}">{{ emprunt.livre.titre }}, {{ emprunt.livre.auteur.identite }}</a></td>
            </tr>
            <tr>
                <th>Emprunté le</th>
                <td>{{ emprunt.sortie ? emprunt.sortie|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Rendu</th>
                <td>{{ emprunt.retour ? emprunt.retour|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_emprunt_index') }}">retour à la liste</a>

    <a href="{{ path('app_admin_emprunt_edit', {'id': emprunt.id}) }}">éditer</a>

    {{ include('admin/emprunt/_delete_form.html.twig') }}
{% endblock %}
